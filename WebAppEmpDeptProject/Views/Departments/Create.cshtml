@model EmpDeptProject.Models.Department
@{
    ViewData["Title"] = "Add Department";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Department</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="DeptName"></label>
            <input asp-for="DeptName" class="form-control" />
            <span asp-validation-for="DeptName" class="text-danger"></span>

        </div>
        <button class="btn btn-primary" style="width:150px">Submit</button>
        <a asp-controller="Departments" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>
    </div>
</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial.cshtml" />
}

